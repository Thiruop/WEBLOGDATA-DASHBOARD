<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Frequently Viewed Webpages</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      table.table.table-striped.table-bordered {
        color: white;
      }

      table.table-striped.table-bordered thead {
        background-color: #343a40;
      }

      table.table-striped.table-bordered tbody {
        color: rgb(253, 253, 253);
        background-color: grey;
      }
    </style>
  </head>
  <body>
    <%- include("menu") %>
    <main class="container mt-4">
      <h1 class="text-center mb-4 text-white">Frequently Viewed Pages</h1>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">From Page</th>
              <th scope="col">To Page</th>
              <th scope="col">Visit Count</th>
            </tr>
          </thead>
          <tbody>
            <% freqviewpages.forEach(pair => { %>
            <tr>
              <td><%= pair._id.from_page %></td>
              <td><%= pair._id.to_page %></td>
              <td><%= pair.count %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
